<!-- this html code creates a form which pop-up when add department is hit -->

<div class="row">
    <div class="col-md-12">
        <br>
        <h2><b>Department</b></h2>
        <hr />
        <form method="post" action="/departments/add">
            <label for="departmentName" style="color:black;">Department Name:</label>
            <input class="form-control" id="departmentName" name="departmentName" type="text" required/>
            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Add Department" /><br /><br /><br />
        </form>
    </div>
</div>
